<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/orange_light"
    app:layout_anchorGravity="top">

    <TextView
        android:id="@+id/textViewNombreGato"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/orange"
        android:gravity="center"
        android:text="@string/gato"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/imageViewImagenGato"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            app:srcCompat="@android:drawable/btn_star_big_on" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="5dp">
            <TextView
                android:id="@+id/textViewFechaNacimientoGato"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:gravity="left"
                android:text="@string/fecha_nacimiento"/>

            <TextView
                android:id="@+id/textViewChipGato"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:gravity="left"
                android:text="@string/chip"/>

            <TextView
                android:id="@+id/textViewSexoGato"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:gravity="left"
                android:text="@string/sexo"/>

            <TextView
                android:id="@+id/textViewEsterilizadoGato"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:gravity="left"
                android:text="@string/esterilizado"/>

            <TextView
                android:id="@+id/textViewColoniaFKGato"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="1.5"
                android:layout_gravity="center_horizontal"
                android:gravity="left"
                android:text="@string/coloniaFK"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textViewDescripcionGato"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_weight="2"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="10dp"
        android:gravity="left"
        android:text="@string/descripcion"/>
</LinearLayout>
